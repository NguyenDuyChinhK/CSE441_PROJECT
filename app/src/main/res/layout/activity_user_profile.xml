<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.user.UserProfile"
    android:background="@color/end_color">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:text="Tài Khoản"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.148" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginEnd="160dp"
        android:drawableLeft="@drawable/baseline_account_box_24"
        android:gravity="center_vertical"
        android:text="Tên"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.888" />

    <TextView
        android:id="@+id/tvPasswordUser"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginStart="104dp"
        android:gravity="center_vertical"
        android:hint="Mật khẩu"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageUser"
        app:layout_constraintTop_toBottomOf="@+id/tvEmailUser"
        app:layout_constraintVertical_bias="0.094" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginEnd="160dp"
        android:drawableLeft="@drawable/lock_24"
        android:gravity="center_vertical"
        android:text=" Mât khẩu "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.058" />

    <TextView
        android:id="@+id/tvNameUser"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="70dp"
        android:gravity="center_vertical"
        android:hint="Tên bạn"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageUser"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.167" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginEnd="160dp"
        android:drawableLeft="@drawable/email_24"
        android:gravity="center_vertical"
        android:text=" Email"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.326" />

    <TextView
        android:id="@+id/tvEmailUser"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="32dp"
        android:gravity="top|center_vertical"
        android:hint="Đia chỉ email "
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/imageUser"
        app:layout_constraintTop_toBottomOf="@+id/tvNameUser" />

    <ImageView
        android:id="@+id/imageUser"
        android:layout_width="134dp"
        android:layout_height="131dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.002"
        app:srcCompat="@drawable/user_avater" />


    <Button
        android:id="@+id/btnlogOutUser"
        android:layout_width="136dp"
        android:layout_height="51dp"
        android:background="@color/color_hightlighRed"
        android:text="Đăng Xuất"
        android:textColor="@color/black"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.871" />

    <Button
        android:id="@+id/btnMessageVerification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_purple"
        android:text="Xác thực ngay"
        android:textColor="@color/black"
        android:visibility="visible"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.721" />

    <TextView
        android:id="@+id/tvMessageVerification"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="104dp"
        android:gravity="center"
        android:text="Email chưa được xác thực !"
        android:textColor="@color/messes_err"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/btnMessageVerification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_addImageYP"
        android:layout_width="110dp"
        android:layout_height="20dp"
        android:layout_marginStart="32dp"
        android:background="@color/color_purple"
        android:drawableStart="@drawable/add"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:paddingStart="6dp"
        android:text="Thêm ảnh"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.436">
    </TextView>

    <TextView
        android:id="@+id/tv_resetPasswordYP"
        android:layout_width="110dp"
        android:layout_height="20dp"
        android:layout_marginStart="32dp"
        android:background="@color/color_purple"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:paddingStart="6dp"
        android:text="Đặt lại mât khẩu"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_addImageYP"
        app:layout_constraintVertical_bias="0.015"
        tools:ignore="MissingConstraints">
    </TextView>

    <ImageButton
        android:id="@+id/img_buttonback"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.064"
        android:background="@drawable/ic_back_24" />

</androidx.constraintlayout.widget.ConstraintLayout>